[user]
	name = shmurX
	email = 225057938+shmurx@users.noreply.github.com

[alias]
	c = checkout
	c = commit
	s = status
	b = branch

[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow
	frag = magenta
	old = red
	new = green
	whitespace = red reverse
[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[core]
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	editor=vim
	excludesfile = /home/magnus/.gitignore
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true  # use n and N to move between diff sections
	dark = true      # or light = true, or omit for auto-detection

[merge]
	conflictStyle = zdiff3

[push]
	default = current
